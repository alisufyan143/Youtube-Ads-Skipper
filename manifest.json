{
    "name": "YouTube Auto Script",
    "version": "1.0",
    "description": "Runs JavaScript on YouTube pages",
    "permissions": ["activeTab", "https://www.youtube.com/*"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "icons": {
      "48": "icon.png",
      "128": "icon.png"
    },
    "manifest_version": 2
  }